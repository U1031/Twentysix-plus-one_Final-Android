<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


    <WebView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/webView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="각 버튼이 스트리밍 화면과 연결, 모터 조절"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:shadowColor="#EDEDED"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"

        android:text="창문을 보여줘!"
        android:id="@+id/btn_streaming_window"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:shadowColor="#EDEDED"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"

        android:text="현관을 보여줘!"
        android:id="@+id/btn_streaming_door"/>


    <ImageButton

        android:id="@+id/btn_image_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:onClick="onClick"
        android:src="@drawable/menu_back"
        android:visibility="visible" />

</LinearLayout>
